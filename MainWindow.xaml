<Window x:Class="ImageSearchWpf.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="Image Search" Height="500" Width="700">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>


        <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
            <TextBox x:Name="QueryTextBox" Width="350" Height="30"/>
            <Button Content="Шукати" Width="120" Height="30" Margin="10,0,0,0"
                Click="SearchButton_Click" />
        </StackPanel>


        <StackPanel Orientation="Horizontal" Grid.Row="1" Margin="0,0,0,10">
            <CheckBox x:Name="GoogleCheck" Content="Google" IsChecked="True" Margin="0,0,20,0"/>
            <CheckBox x:Name="DuckCheck" Content="DuckDuckGo" IsChecked="True" Margin="0,0,20,0"/>
            <CheckBox x:Name="WikiCheck" Content="Wikipedia" IsChecked="False"/>
        </StackPanel>


        <ScrollViewer Grid.Row="2">
            <StackPanel x:Name="ImagesPanel" />
        </ScrollViewer>
    </Grid>
</Window>